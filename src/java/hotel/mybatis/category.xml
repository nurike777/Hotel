<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
  
<mapper namespace="category"> 
 
    <resultMap id = "result" type = "hotel.model.Category"> 
       <result property = "id" column = "id"/> 
       <result property = "name" column = "name"/> 
       <collection property="content" javaType="List" ofType="content.model.Content" column="id"  select="selectContent" />
    </resultMap> 
 
    <select id="selectContent" parameterType="int" resultMap="content.result">  
          select * from content where id_category = #{id}
    </select>
 
 
    <select id = "selectAll" resultMap = "result"> 
       SELECT * FROM category;  
    </select> 

    <select id = "selectById" parameterType = "int" resultMap = "result"> 
       SELECT * FROM category WHERE id = #{id}; 
    </select> 

    <update id = "update" parameterType = "hotel.model.Category"> 
       UPDATE category SET 
        name = #{name}
        WHERE id = #{id}; 
    </update> 
  
    <delete id = "deleteById" parameterType = "int"> 
       DELETE from category WHERE id = #{id}; 
    </delete> 

    <insert id = "insert" parameterType = "hotel.model.Category"> 
       INSERT INTO category (name)  VALUES (#{name});     
    </insert>
</mapper> 